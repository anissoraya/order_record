<h1>Customers</h1>
<br>
<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>Phone</th>
      <th>Address</th>
      <th colspan="3">Manage Customer</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.company %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.address %></td>
        <td><%= link_to customer do%><i class="fa fa-eye"></i><%end%></td>
        <td><%= link_to edit_customer_path(customer) do%><i class="fa fa-pencil"></i><%end%></td>
        <td><%= link_to customer, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, :class => 'delete_customer' do%><i class="fa fa-remove"></i><%end%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<center><%= will_paginate @customers, renderer: BootstrapPagination::Rails %></center>

<center><%= link_to 'New Customer', new_customer_path, class: 'btn btn-info' %></center>
