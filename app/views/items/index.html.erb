<h1>Items</h1>
<br>
<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <!--<th>Price</th>-->
      <th colspan="3">Manage Item</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <!--<td><%= item.price %></td>-->
        <td><%= link_to item do%><i class="fa fa-eye"></i><%end%></td>
        <td><%= link_to edit_item_path(item) do%><i class="fa fa-pencil"></i><%end%></td>
        <td><%= link_to item, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, :class => 'delete_item' do%><i class="fa fa-remove"></i><%end%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


<br>
<center><%= will_paginate @items, renderer: BootstrapPagination::Rails %></center>

<center><%= link_to 'New Item', new_item_path, class: 'btn btn-info' %></center>
