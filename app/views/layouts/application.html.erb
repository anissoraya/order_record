<!DOCTYPE html>
<html>
<head>
  <title>Amin Nasi Kapit</title>

  <%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="<%= root_path %>">Amin Nasi Kapit</a>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
          <% if admin_signed_in? %>
          <li class="active"><a href="<%= dashboard_index_path %>">Dashboard</a></li>
          <li><a href="<%= orders_path%>">All Orders</a></li>
          <li><a href="<%= customers_path%>">Customers</a></li>
          <li><a href="<%= items_path%>">Items</a></li>
          <li><a href="<%= runners_path%>">Runners</a></li>
          <li><a href="<%= chefs_path%>">Chefs</a></li>
          <%end%>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <%if user_signed_in? %>
              <%if current_user.meta.present? %>
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= current_user.meta.name %>
                  <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <%if current_user.meta_type == "Chef" %>
                    <li><a href="<%= chef_path(current_user.meta.id) %>">Profile</a></li>
                    <%else%>
                    <li><a href="<%= runner_path(current_user.meta.id) %>">Profile</a></li>
                    <%end%>
                  </ul>
              </li>
              <%end%>
            <li><a href="<%= destroy_user_session_path %>" data-method="<%= :delete %>"><i class="fa fa-sign-out"></i> Sign Out</a></li>
            <%elsif admin_signed_in? %>
              <li><a href="<%= destroy_admin_session_path %>" data-method="<%= :delete %>"><i class="fa fa-sign-out"></i> Sign Out</a></li>
              <% else %>
              <li><a href="<%= new_user_registration_path %>"><i class="fa fa-user"></i> Sign Up</a></li>
              <li><a href="<%= new_user_session_path %>"><i class="fa fa-sign-in"></i> Sign In</a></li>
          <%end%>

        </ul>
      </div>
    </div>
  </nav>
      <!--
          <form class="float-xs-right">
          <input type="text" class="form-control" placeholder="Search...">
          </form>
      -->
    </div>
  </nav>

    <div class="container-fluid main">
      <% if notice.present? %>
      <div class="alert alert-success alert-dismissible fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <strong><span id="notice"><%= notice %></span></strong>
      </div>
        <%elsif alert.present? %>
        <div class="alert alert-success alert-dismissible fade in" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong><span id="notice"><%= notice %></span></strong>
        </div>
      <%end%>

      <div class="row">
          <div class="col-sm-12 main">
          <%= yield %>
        </div>
      </div>
    </div>

</body>
</html>
