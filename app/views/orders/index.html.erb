<h1>Orders</h1>
<br>
<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>Customer</th>
      <th>Order date</th>
      <th>Order day</th>
      <th colspan="3">Manage Order</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.item.name %></td>
        <td><%= order.quantity %></td>
        <td><%= order.customer.name %>(<%= order.customer.company%>)</td>
        <td><%= order.date_format%></td>
        <td><%= order.day_order %></td>
        <td><%= link_to order do%><i class="fa fa-eye"></i><%end%></td>
        <td><%= link_to edit_order_path(order) do%><i class="fa fa-pencil"></i><%end%></td>
        <td><%= link_to order, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, :class => 'delete_customer' do %><i class="fa fa-remove"></i><%end%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<center><%= will_paginate @orders, renderer: BootstrapPagination::Rails %></center>
<center><%= link_to 'New Order', new_order_path, class: 'btn btn-info' %></center>
