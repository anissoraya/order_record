<%= form_for [@runner, @runner_task] do |f| %>
  <% if runner_task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(runner_task.errors.count, "error") %> prohibited this runner_task from being saved:</h2>

      <ul>
      <% runner_task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row form-group">
      <div class="col-sm-1">
      <%= f.label :package_quantity %>
      </div>
    <div class="col-sm-8">
      <%= f.number_field :package_quantity, class:'form-control', required: true %>
    </div>
  </div>

  <div class="row form-group">
      <div class="col-sm-1">
      <%= f.label :order_id %>
      </div>
    <div class="col-sm-8">
      <%= f.collection_select :order_id, Order.all, :id, :customer_id, {include_blank: true}, {class:'form-control'} %>
    </div>
  </div>

  <div class="field">
    <%= f.hidden_field :runner_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
