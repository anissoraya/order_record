<%= form_for(runner) do |f| %>

  <% if runner.errors.any? %>
  <div class="alert alert-success alert-dismissable">
      <a href="#" class="close" data-dismiss="alert" aria-label="close"><i class="fa fa-remove"></i></a>
    <div id="error_explanation">
      <h2><%= pluralize(runner.errors.count, "error") %> prohibited this runner from being saved:</h2>

      <ul>
      <% runner.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  </div>
  <% end %>


  <div class="row form-group">
      <div class="col-sm-1">
      <%= f.label 'Nama' %>
      </div>
    <div class="col-sm-8">
      <%= f.text_field :name, class:'form-control', required: true %>
    </div>
  </div>

  <div class="row form-group">
      <div class="col-sm-1">
      <%= f.label 'No Telefon' %>
      </div>
    <div class="col-sm-8">
      <%= f.text_field :phone, class:'form-control', required: true %>
    </div>
  </div>

  <div class="actions">
    <div class="row">
    <div class="col-sm-1"></div><div class="col-sm-8" style="text-align:right"><%= f.submit 'Save', class: 'btn btn-success' %></div>
    </div>
  </div>
<% end %>
