<h1>Runners</h1>
<%= form_tag runners_path, method: 'get', id: "runners_search", remote: true do %>
<div class="row">
<div class="col-sm-4"><%= text_field_tag :search_runner, params[:search_runner], class:'form-control', placeholder: "Search Runner's name" %></div>
</div>
<%end%>
<br>
<div id="runners">
  <%= render 'runners'%>
</div>
<legend>Print Runner Order</legend>
<div class="row">
  <%= form_tag print_print_order_all_path, :method => 'get', class:'form-inline' do %>

      <div class="col-sm-12" style="">
            <%= date_field_tag :date, params[:date], required: true, class:'form-control'%>

            <%= submit_tag "Search By Date", :name => nil, class: 'btn btn-info' %>

      </div>


  <% end %>
</div>
